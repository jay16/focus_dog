.solife-login-form
  %h1.page_title hhh
  .solife-login-inner
    %form{:action => "/login", :method => "post"}
      .control-group
        .controls
          .input-prepend
            .add-on
              Email
            %input{:id => "user_email", :name => "email", :size => 30, :type => "text"}
            .control-group
        .controls
          .input-prepend
            .add-on
              Password
            %input{:id => "user_password", :name => "password", :size => 30, :type => "password"}
            .control-group
        .controls
          .buttons
            %input{:value => "login", :type => "submit", :class => "btn btn-info btn-primary"}
            %a{:href => "/signup", :class => 'sinatra_authentication_link'}
