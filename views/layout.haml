    .navbar.navbar-fixed-top{:style => "position: absolute;"}
      .navbar-inner
        .container{:style => "width: auto; padding-left: 15%;padding-right:10%;"}
          %a.brand{:href => "#"} FocusMail日志管理平台
          %ul.nav.pull-right
            %li
              %a{:href => "http://main.intfocus.com", :target => "_blank"} 登陆FocusMail
    .container.clearfix{:style => "margin-top:50px;"}
      .row-fluid
        .span12.box-shadow{:style => "width:970px;margin-left:100px;padding:5px 10px;border-radius: 3px;min-height: 400px;"}
          = yield
  :javascript
    $(function(){
       $("table").removeAttr("border");
       $("table").addClass("table table-bordered table-condensed table-hover");
       $("table th").css("text-align","center");
       $("table td").css("text-align","center");
    });
