<h1>用户注册</h1>

<div>
<%= form(@action, :create, { class: "form-horizontal"}) %>

  <% fieldset(:user) do |f| %>
    
    <div class="control-group">
      <label class="control-label" for="name">name</label>
      <div class="controls">
	<%= f.input(:name, :value => @user.name) %>
      </div>
    </div>

    <div class="control-group">
      <label class="control-label" for="email">email</label>
      <div class="controls">
	<%= f.input(:email, value: @user.email) %>
      </div>
    </div>


    <div class="control-group">
      <label class="control-label" for="password">password</label>
      <div class="controls">
	<%= f.input(:password, value: @user.email) %>
      </div>
    </div>
  <% end %>

    <div class="control-group">
      <div class="controls">
	<%= submit "submit", class: "btn btn-info btn-primary" %>
      </div>
    </div>
</div>
