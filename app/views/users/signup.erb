<h1>This view is overridden</h1>
<div id='sinatra_authentication'>
  <h1 class='page_title'>Signup</h1>
  <form action='/signup' method='post'>
    <div class='field'>
      <div class='label'>
        <label for='user_email'>Email</label>
      </div>
      <input id='user_email' name='user[email]' size='30' type='text'>
    </div>
    <div class='field'>
      <div class='label'>
        <label for='user_password'>Password</label>
      </div>
      <input id='user_password' name='user[password]' size='30' type='password'>
    </div>
    <div class='field'>
      <div class='label'>
        <label for='user_name'>Name</label>
      </div>
      <input id='user_name' name='user[name]' size='30' type='text'>
    </div>
    <div class='field'>
      <div class='label'>
        <label for='user_password_confirmation'>Confirm Password</label>
      </div>
      <input id='user_password_confirmation' name='user[password_confirmation]' size='30' type='password'>
    </div>
    <div class='buttons'>
      <input class='btn btn-info btn-primary' type='submit' value='Create account'>
      <a class='sinatra_authentication_link' href='/login'></a>
    </div>
  </form>
</div>
