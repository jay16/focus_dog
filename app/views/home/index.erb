<div class='solife-login-form'>
  <h1 class='page_title'>hhh</h1>
  <div class='solife-login-inner'>
    <form action='/login' method='post'>
      <div class='control-group'>
        <div class='controls'>
          <div class='input-prepend'>
            <div class='add-on'>
              Email
            </div>
            <input id='user_email' name='email' size='30' type='text'>
            <div class='control-group'></div>
          </div>
        </div>
        <div class='controls'>
          <div class='input-prepend'>
            <div class='add-on'>
              Password
            </div>
            <input id='user_password' name='password' size='30' type='password'>
            <div class='control-group'></div>
          </div>
        </div>
        <div class='controls'>
          <div class='buttons'>
            <input class='btn btn-info btn-primary' type='submit' value='login'>
            <a class='sinatra_authentication_link' href='/signup'></a>
          </div>
        </div>
      </div>
    </form>
  </div>
</div>
